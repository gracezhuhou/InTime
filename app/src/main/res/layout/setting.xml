<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/title_setting"
            android:id="@+id/title_setting"/>

        <com.example.litepaltest.CircleImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/title_setting"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/img_1"
            android:clickable="true"
            android:focusable="true"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/title_setting"
            android:layout_toRightOf="@id/iv_image"
            android:layout_toEndOf="@id/iv_image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:text="昵称:"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/in_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/title_setting"
            android:layout_toRightOf="@id/name"
            android:layout_marginTop="30dp"
            android:hint="Typing name"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/sign"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/iv_image"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="签名:"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/sign"
            android:layout_marginTop="15dp"
            android:hint="Signing here"
            android:maxLines="2"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/txt_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户信息"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/more"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ranking_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排行"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/more"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="关于我们"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/more"/>

    </RelativeLayout>

</LinearLayout>